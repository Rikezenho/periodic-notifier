---
	import Layout from '../layouts/Layout.astro';
	import { TimerForm } from '../components/TimerForm';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>⏱ Periodic Notifier</h1>
		<p>Ou, em PT-BR, notificador periódico :)</p>
		<TimerForm client:load />
	</main>
</Layout>

<style>
	h1 {
		margin: 2rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}
</style>